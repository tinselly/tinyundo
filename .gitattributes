*    text=auto

# C\C++ Sources
*.c      text diff=c
*.h      text diff=c
*.cc     text diff=cpp
*.hh     text diff=cpp
*.cpp    text diff=cpp
*.hpp    text diff=cpp
*.c++    text diff=cpp
*.h++    text diff=cpp
*.cxx    text diff=cpp
*.hxx    text diff=cpp

# Unix scripts
*.bash   text eol=lf
*.sh     text eol=lf

# Windows scripts
*.bat    text eol=crlf
*.cmd    text eol=crlf
*.ps1    text eol=crlf

# Images
*.gif     filter=lfs    diff=lfs    merge=lfs -text
*.ico     filter=lfs    diff=lfs    merge=lfs -text
*.jpg     filter=lfs    diff=lfs    merge=lfs -text
*.png     filter=lfs    diff=lfs    merge=lfs -text

# Git
.gitattributes export-ignore
.gitignore     export-ignore
